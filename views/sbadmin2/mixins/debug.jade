//- Dropdown notification 
//- With JS Tag to update list
mixin dropdown-debug()
        li.dropdown
          a.dropdown-toggle.text-muted(href='#',data-toggle='dropdown')
            i.fa.fa-code.fa-fw#debugListButton
          ul.dropdown-menu.dropdown-messages
            li     
              a()
                div
                  strong Debugging Helper - use with care!
            li.divider
            li     
              a(href='#',onclick="socket.emit('bgDebugClearTaskList', true);")
                div
                  i.fa.fa-pencil.fa-fw
                  strong MI5.ClearTaskList (.116)
                  span.pull-right.text-muted
                    em = true
            li.divider
            li.divider
            li     
              a(href='#',onclick="socket.emit('bgDebugResetProcessTool', true);")
                div
                  i.fa.fa-pencil.fa-fw
                  strong MI5.ResetProcessTool (.117)
                  span.pull-right.text-muted
                    em = true
            li.divider
            li.divider
            li     
              a(href='#',onclick="socket.emit('bgDebugResetXTS',1);")
                div
                  i.fa.fa-pencil.fa-fw
                  strong MI5.ResetXTS (.137)
                  span.pull-right.text-muted
                    em = true
            li.divider
            li.divider
            li     
              a(href='#',onclick="socket.emit('bgDebugMaintenanceTrue',1);")
                div
                  i.fa.fa-pencil.fa-fw
                  strong Mi5.Maintenance (.137)
                  span.pull-right.text-muted
                    em = true
            li.divider
            li     
              a(href='#',onclick="socket.emit('bgDebugMaintenanceFalse',1);")
                div
                  i.fa.fa-pencil.fa-fw
                  strong Mi5.Maintenance (.137)
                  span.pull-right.text-muted
                    em = false
            li.divider
            li.divider
            li     
              a(href='#',onclick="socket.emit('bgDebugRestartXTS',1);")
                div
                  i.fa.fa-pencil.fa-fw
                  strong Mi5.Restart (.137)
                  span.pull-right.text-muted
                    em = true
                  