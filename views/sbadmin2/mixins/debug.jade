//- Dropdown notification 
//- With JS Tag to update list
mixin dropdown-debug()
        li.dropdown
          a.dropdown-toggle.text-warning(href='#',data-toggle='dropdown')
            i.fa.fa-puzzle-piece.fa-fw
            i.fa.fa-caret-down
          ul.dropdown-menu.dropdown-messages#messageFeedList
            li     
              a(href='#',onclick="socket.emit('bgDebugOrderPendingFalse',1);")
                div
                  strong Debugging Helper
            li.divider
            li     
              a(href='#',onclick="socket.emit('bgDebugOrderPendingFalse',1);")
                div
                  i.fa.fa-pencil.fa-fw
                  strong Mi5.Order[0].pending
                  span.pull-right.text-muted
                    em = false