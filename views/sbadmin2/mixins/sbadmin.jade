                   
mixin dropdown-tasks()
        li.dropdown
          a.dropdown-toggle(href='#',data-toggle='dropdown')
            i.fa.fa-tasks.fa.fw
            i.fa.fa-caret-down
          ul.dropdown-menu.dropdown-tasks
            li
              a(href='#')
                div
                  p
                    strong Task 1
                    span.pull-right.text-muted 40% Complete
                  div.progress.progress-striped.active
                    div.progress-bar.progress-bar-success(role='progressbar',aria-valuenow='40',aria-valuemin='0',aria-valuemax='100',style='width:40%')
                      span.sr-only 40% Complete (success)
                      
            li.divider
            li     
              a(href='#')
                div
                  p
                    strong Task 1
                    span.pull-right.text-muted 40% Complete
                  div.progress.progress-striped.active
                    div.progress-bar.progress-bar-success(role='progressbar',aria-valuenow='40',aria-valuemin='0',aria-valuemax='100',style='width:40%')
                      span.sr-only 40% Complete (success)
                      
mixin dropdown-alerts
        li.dropdown
          a.dropdown-toggle(href='#',data-toggle='dropdown')
            i.fa.fa-bell.fa.fw
            i.fa.fa-caret-down
          ul.dropdown-menu.dropdown-alerts
            li
              a(href='#')
                div
                  i.fa.fa-comment.fa-fw
                  | Manual action required
                  span.pull-right.text-muted.small 20 s
            li.divider
            li
              a(href='#')
                div
                  i.fa.fa-comment.fa-fw
                  | Manual action required
                  span.pull-right.text-muted.small 44 s

mixin dropdown-time
      li.dropdown
          a.dropdown-toggle(href='#',data-toggle='dropdown')
            span#serverTimeHMS ..:..:..
          ul.dropdown-menu.dropdown-tasks
            li
              a
                div
                  p
                    strong#serverTimeDay .....
                    span.pull-right.text-muted#serverTimeDate ........ .. ....
            li.divider
            li
              a
                div
                  p
                    strong Current shift
                  div.progress.progress-striped.active
                    div.progress-bar.progress-bar-success(role='progressbar',aria-valuenow='40',aria-valuemin='0',aria-valuemax='100',style='width:40%')
                      span.sr-only 40% Complete (success)
          script socket.on('serverTime', function(serverTime){ 
            | $('#serverTimeHMS').html(serverTime.serverTimeHMS);
            | $('#serverTimeDay').html(serverTime.serverTimeDay);
            | $('#serverTimeDate').html(serverTime.serverTimeDate);
            | });
 

mixin messageFeedHtml()
        script socket.on('messageFeed', function(msg){
         | var currText = $('#messageFeed').val();
         | var newText = 'ID:'+msg.ID.value+' | Level: '+msg.Level.value+' | Msg: '+msg.Message.value+' | Timestamp: '+msg.Timestamp.value;
         | $('#messageFeed').val(newText+"\n"+currText); 
         | console.log(msg); 
         | });
